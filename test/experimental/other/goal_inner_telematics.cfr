// generic PLA

abstract options
    xor size
        small
        large
    cache ?
        size -> integer
            fixed ?
    [small && cache => fixed]

abstract comp
    version -> integer = 1 + 2

abstract ECU : comp

abstract display : comp
    server -> ECU
    `options
    price -> integer
    [this.version >= server.version]


// specific PLA (template)

// display constraints
//[all d : plaECU.display | d.server = this !d.options.cache]

abstract plaECU : ECU
    `display 1..2
        [server = parent
         !options.cache
	 price = 5]
    highEnd ?
        << goal >>

ECU1 : plaECU

ECU2 : plaECU ?
    master -> ECU1

