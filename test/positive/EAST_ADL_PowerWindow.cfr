import file://EAST-ADL-funcdevice
import ftp://t3-necsis.cs.uwaterloo.ca/EAST-ADL-connector
import http://t3-necsis.cs.uwaterloo.ca:8091/clafer/standards_EAST-ADL-device

abstract PWSubsystemFunctionalArchitecture
    WinController : AnalysisFunction
    Motor : FunctionalDevice
    Switch : FunctionalDevice
    conRequest : AFConnector
        [ src = Switch ]
        [ dest = WinController ]
    conCommand : AFConnector
        [ src = WinController ]
        [ dest = Motor ]

abstract ECU : Device
    [ smart ]

abstract PWSubsystemHardware
    doorModule : ECU ?
    bcm : ECU ?
    dumbSwitch : Device ?
        [ not smart ]

// to be removed once imports work
abstract AnalysisFunction

abstract FunctionalDevice : AnalysisFunction

abstract AFConnector
    src ->> AnalysisFunction
    dest ->> AnalysisFunction

abstract Device
    smart ?